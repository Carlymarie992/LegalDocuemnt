# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///secure_docs.db

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# File Upload Configuration
MAX_CONTENT_LENGTH=100000000  # 100MB max file size
UPLOAD_FOLDER=uploads
SECURE_UPLOAD_FOLDER=secure_uploads

# API Keys (Optional - for AI services)
OPENAI_API_KEY=your-openai-api-key-here
AZURE_COGNITIVE_KEY=your-azure-key-here

# Security Configuration
BCRYPT_LOG_ROUNDS=12
RATE_LIMIT_DEFAULT=100 per hour
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Encryption Configuration
ENCRYPTION_KEY=your-32-byte-base64-encryption-key-here
FILE_ENCRYPTION_ENABLED=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
AUDIT_LOG_FILE=logs/audit.log

# Forensic Configuration
EVIDENCE_HASH_ALGORITHM=SHA256
CHAIN_OF_CUSTODY_ENABLED=True